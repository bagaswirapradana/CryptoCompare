<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Application" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/green_900</item>
    <item name="colorPrimaryVariant">@color/white</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/green_900</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="EditTextThemeOverlay" parent="ThemeOverlay.AppCompat">
    <item name="colorAccent">@color/green_900</item>
    <item name="fontFamily">@font/proxima_nova_bold</item>
    <item name="android:textSize">@dimen/_14ssp</item>
  </style>

  <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/green_900</color>

  <style name="ProgressBarStyle">
    <item name="colorAccent">@color/green_900</item>
  </style>

  <style name="Widget.BottomNavigationView"
      parent="Widget.Design.BottomNavigationView">
    <item name="fontFamily">@font/proxima_nova_bold</item>
  </style>

</resources>